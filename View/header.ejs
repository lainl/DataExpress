<header class="site-header" style="background-color: #ba9f82;">
    <style>
      @font-face {
        font-family: 'Handwriting';
        src: url('/fonts/handwritting.ttf') format('truetype');
      }
      .site-nav {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 10px;
        gap: 10px;
      }
      .nav-button {
        background-color: #ccbc9f;
        color: #8c6d4f;
        font-family: 'Handwriting', cursive;
        border: none;
        padding: 10px 20px;
        border-radius: 9999px;
        cursor: pointer;
        transition: background-color 0.3s;
      }
      .nav-button:hover {
        background-color: #d2c3b2;
      }
    </style>
    <nav class="site-nav">
      <button class="nav-button" onclick="window.location.href='/'">Home</button>
      <% if (typeof user !== 'undefined' && user) { %>
        <button class="nav-button" onclick="window.location.href='/loggedin'">My Profile</button>
        <button class="nav-button" onclick="document.getElementById('logoutForm').submit()">Logout</button>
      <% } else { %>
        <button class="nav-button" onclick="window.location.href='/login'">Login</button>
        <button class="nav-button" onclick="window.location.href='/register'">Register</button>
      <% } %>
    </nav>
    <form id="logoutForm" action="/logout" method="POST" style="display:none;"></form>
  </header>
  